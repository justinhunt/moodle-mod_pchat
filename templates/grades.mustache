{{!
  @template mod_pchat/grades

  Displays student submissions to be graded.

  The purpose of this template is to display submissions by students to be graded.
}}
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css"/>
<div class="mod_pchat_totalgradeables"><h3>{{# str }} totalgradeables, mod_pchat,{{totalgradeables}} {{/ str }}</h3></div>
<table cellpadding="0" cellspacing="0" width="100%" class="table table-striped" id="mod_pchat_grade_submissions_table">
    <thead>
    <tr>
        <th>{{# str }} gradeslast, mod_pchat {{/ str }}</th>
        <th>{{# str }} gradesfirst, mod_pchat {{/ str }}</th>
        <th>{{# str }} gradesaiscore, mod_pchat {{/ str }}</th>
        <th>{{# str }} gradesturns, mod_pchat {{/ str }}</th>
        <th>{{# str }} gradesavturnlength, mod_pchat {{/ str }}</th>
        <th>{{# str }} gradesactions, mod_pchat {{/ str }}</th>
        <th>{{# str }} gradesgrade, mod_pchat {{/ str }}</th>
    </tr>
    </thead>
    <tfoot>
    <tr>
        <th>{{# str }} gradeslast, mod_pchat {{/ str }}</th>
        <th>{{# str }} gradesfirst, mod_pchat {{/ str }}</th>
        <th>{{# str }} gradesaiscore, mod_pchat {{/ str }}</th>
        <th>{{# str }} gradesturns, mod_pchat {{/ str }}</th>
        <th>{{# str }} gradesavturnlength, mod_pchat {{/ str }}</th>
        <th>{{# str }} gradesactions, mod_pchat {{/ str }}&nbsp;</th>
        <th>{{# str }} gradesgrade, mod_pchat {{/ str }}</th>
    </tr>
    </tfoot>
    <tbody id="history-table-body">
    {{#data}}
        <tr data-history-id="{{id}}" class="history-row">
            <td>{{lastname}}</td>
            <td>{{firstname}}</td>
            <td class="text-center">{{aiaccuracy}}</td>
            <td class="text-center">{{turns}}</td>
            <td class="text-center">{{avturn}}</td>
            <td><a href="gradesubmissions.php?id={{cmid}}&attempt={{attemptid}}&userid={{userid}}">
                <button type="button" class="btn btn-primary">
                    {{# str }} gradesgrade, mod_pchat {{/ str }}
                </button>&nbsp;</a></td>
            <td class="m-0 text-center">{{grade}}</td>

        </tr>
    {{/data}}
    </tbody>
</table>

{{#js}}
    require([
    "jquery",
    'https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js',
    ], function ($, datatable) {
    let table = $("#mod_pchat_grade_submissions_table").dataTable();
    });
{{/js}}